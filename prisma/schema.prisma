generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MealType {
  breakfast
  lunch
  snack
  dinner
  supper
  other
}

enum MealItemSource {
  VISION
  MANUAL
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  meals     Meal[]
}

model Meal {
  id            String   @id @default(uuid())
  userId        String
  type          MealType
  takenAt       DateTime @default(now())

  // URL/Path da foto j√° salva no disco (servida em /uploads/..)
  imagePath     String?

  totalCalories Int      @default(0)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id])
  items         MealItem[]

  @@index([userId, takenAt])
}

model MealItem {
  id              String   @id @default(uuid())
  mealId          String
  name            String
  grams           Int
  caloriesPer100g Int
  calories        Int
  confidence      Float?
  source          MealItemSource @default(VISION)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  meal            Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@index([mealId])
}
